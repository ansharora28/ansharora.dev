---
import Link from "../components/Link.astro";
import PageSection from "../layouts/PageSection.astro";
import SectionHeading from "./SectionHeading.astro";

const FRAPPEVERSE_LINKS = {
  Projects: [
    { title: "NextJS + Sanity Blog", link: "https://github.com/ansharora28/blog-project" },
    { title: "pFinTools.com", link: "https://www.pfintools.com" },
    { title: "Expect a Frappe project here soon :)", link: "" },
  ],
  
  ["Write Ups and more"]: [
    {
      title: "Building a sustainable FOSS ecosystem",
      link: "https://medium.com/@ansharora2802/building-a-sustainable-foss-ecosystem-658875e053cd",
    },
    {
      title: "Discovering Linux Mint (upcoming mon.school course)",
      link: "https://mon.school/courses/discovering-linux-linux-mint",
    },
    {
      title: "The LLM race, are we too early? My thoughts on AI",
      link: "",
    },
    
  ],
};
---
<PageSection>
  <!-- <SectionHeading>Frappeverse</SectionHeading> -->

  <div class="mt-12 space-y-24 md:grid md:grid-cols-2 xl:grid-cols-3 md:items-start md:justify-between md:space-y-0 md:gap-y-14 md:gap-x-14">
    <!-- Iterate over FRAPPEVERSE_LINKS and render as above -->
    {Object.keys(FRAPPEVERSE_LINKS).map((category) => (
      <div class="space-y-8 col-span-1">
        <div class="flex items-center space-x-3">
          <h3 class="uppercase text-green-900 font-bold text-sm hover:text-blue-500">
            {category}
          </h3>

          <div class="h-[1px] w-10 bg-green-900" />
        </div>

        <div class="space-y-4">
          {FRAPPEVERSE_LINKS[category].map((link) => (
            <div class="hover:text-blue-500 transition-colors">
              <a
                href={link.link}
                target="_blank"
                rel="noopener noreferrer"
                class="text-green-900 hover:text-blue-500"
              >
                {link.title}
              </a>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</PageSection>
