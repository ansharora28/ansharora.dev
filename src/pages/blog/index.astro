---
import Layout from "../../layouts/Layout.astro";
import PageSection from "../../layouts/PageSection.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/footer.astro";
const blogPosts = [
  { title: "Connecting the dots", slug: "dots", description: " Thoughts on the journey so far, new beginnings and FOSS United" },
  { title: "What I read this week #1", slug: "1", description: "Monkey Business, Balancing makers and takers to sustain open source, open source vc funding" },
  { title: "What I read this week #2", slug: "2", description: "Butterfly effect, Sexism in FOSS communities, Chart of the century" },
  { title: "What I read this week #3", slug: "3", description: "Public Money Public Code, Netflix's culture change, A Hitchhiker's Guide to the Number 42 " },
  { title: "What I read this week #4", slug: "4", description: "Science can answer moral questions, Singer solution to world poverty, The accidental tyranny of user interfaces." },
];

---
<Layout title="Blog">
    <Hero />
    <PageSection>
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-8">Blog Posts</h2>
        <div class="grid gap-6">
          {blogPosts.map((post, index) => (
            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition duration-300">
              <a href={`/blog/${post.slug}`} class="block hover:bg-gray-50">
                <div class="p-6">
                  <h3 class="text-lg font-semibold mb-2">{post.title}</h3>
                  <p class="text-gray-700">{post.description}</p>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </PageSection>
  </Layout>
  
