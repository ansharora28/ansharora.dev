---
import Layout from "../../layouts/Layout.astro";
import PageSection from "../../layouts/PageSection.astro";
import Hero from "../../components/Hero.astro";
import Footer from "../../components/footer.astro";
const blogPosts = [
  { title: "Connecting the dots", slug: "dots", description: " Thoughts on the journey so far, new beginnings and FOSS United" },
   { title: "What I read this week #1", slug: "1", description: "Interesting reads from the past week - June 6th, 2024" },
//   { title: "Post 3", slug: "post-3" },
];

---
<Layout title="Blog">
    <Hero />
    <PageSection>
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-8">Blog Posts</h2>
        <div class="grid gap-6">
          {blogPosts.map((post, index) => (
            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition duration-300">
              <a href={`/blog/${post.slug}`} class="block hover:bg-gray-50">
                <div class="p-6">
                  <h3 class="text-lg font-semibold mb-2">{post.title}</h3>
                  <p class="text-gray-700">{post.description}</p>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </PageSection>
  </Layout>
  
